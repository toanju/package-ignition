+<!-- ignition -->
+```json
+{
+  "ignition": { "version": "3.4.0" },
+  "storage": {
+    "luks": [{
+      "name": "luks-tang",
+      "device": "/dev/sdb",
+      "clevis": {
+        "tang": [{
+          "url": "https://tang.example.com",
+          "thumbprint": "REPLACE-THIS-WITH-YOUR-TANG-THUMBPRINT",
+          "advertisement": "{\"payload\": \"...\", \"protected\": \"...\", \"signature\": \"...\"}"
+        }]
+      }
+    }]
+  }
